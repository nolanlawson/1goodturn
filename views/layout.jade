!!!5
html
  head
    title #{APP_INFO.description}
    link(href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.min.css",rel="stylesheet")
    if APP_INFO.production
      link(href='css/application.min.css',rel="stylesheet")
    else
      link(href='css/application.css',rel="stylesheet")
    link(rel='shortcut icon',type='image/x-icon',href='images/favicon.ico')
    link(href='http://fonts.googleapis.com/css?family=Chela+One',rel='stylesheet',type='text/css')
    //- ensure ng-cloaked elements aren't shown while the app is loading, @see ng-cloak in Angular API
    style [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak],     .ng-cloak, .x-ng-cloak {display: none;}
  body(ng-app="one-good-turn")
    block content
    footer
      p
        small
          :markdown
            Created by [Nolan Lawson](http://nolanlawson.com).
            Version #{APP_INFO.version}.
    //- fetch from CDN, or local if not available
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.1.3/angular.min.js")
    script
      window.angular || document.write('<script src="js/lib/angular-1.1.3.min.js">\x3C/script>')
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
    script
      window.jQuery || document.write('<script src="js/lib/jquery-1.8.3.min.js">\x3C/script>')
    script(src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js")
    script
      window._ || document.write('<script src="js/lib/underscore-1.4.4.min.js">\x3C/script>')
    script(src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js")
    script
      window.jQuery.fn.modal || document.write('<script src="js/lib/bootstrap-2.3.1.min.js">\x3C/script>')
    script(src="js/lib/socket.io.min.js")
    script(src="js/lib/moment-2.0.0.min.js")
    script
      var APP_INFO = !{JSON.stringify(APP_INFO)};
    if APP_INFO.production
      script(src="js/application-concat.min.js")
    else
      script(src="js/application-concat.js")
    
